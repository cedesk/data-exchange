<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import jfxtras.scene.control.ListView?>
<TitledPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.skoltech.cedl.dataexchange.ui.controller.StatusController"
            fx:id="statusBarPane" expanded="false" animated="false">
    <graphic>
        <Label fx:id="statusBarLabel" text="StatusBar"/>
    </graphic>
    <BorderPane>
        <padding>
            <Insets/>
        </padding>
        <center>
            <TextArea prefHeight="60" fx:id="statusBarTextArea" editable="false" wrapText="true"/>
        </center>
    </BorderPane>
</TitledPane>
