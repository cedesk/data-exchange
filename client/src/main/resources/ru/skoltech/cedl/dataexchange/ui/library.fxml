<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.glyphfont.Glyph?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="250.0"
            xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="ru.skoltech.cedl.dataexchange.ui.controller.LibraryController">
    <top>
        <GridPane>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <GridPane hgap="8.0" vgap="2.0">
                <columnConstraints>
                    <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="60.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Text text="Search:" GridPane.rowIndex="0"/>
                <TextField fx:id="searchTextField" promptText="tag" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Text text="Category:" GridPane.rowIndex="1"/>
                <ChoiceBox fx:id="categoryChoice" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            <columnConstraints>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
    </top>
    <center>
        <TitledPane animated="false" collapsible="false" text="Components">
            <ListView fx:id="componentList"/>
        </TitledPane>
    </center>
    <bottom>
        <ToolBar prefHeight="30.0">
            <Button fx:id="addNodeButton" minWidth="28" mnemonicParsing="false">
                <tooltip>
                    <Tooltip text="Add Node"/>
                </tooltip>
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="PLUS"/>
                </graphic>
            </Button>
            <Button fx:id="deleteNodeButton" minWidth="28" mnemonicParsing="false">
                <tooltip>
                    <Tooltip text="Remove Node"/>
                </tooltip>
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="MINUS"/>
                </graphic>
            </Button>
        </ToolBar>
    </bottom>
</BorderPane>
