<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import org.controlsfx.glyphfont.Glyph?>
<?import ru.skoltech.cedl.dataexchange.control.FiguresOfMeritEditor?>
<?import ru.skoltech.cedl.dataexchange.control.TradespaceView?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styling.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.skoltech.cedl.dataexchange.controller.TradespaceController">
    <children>
        <SplitPane dividerPositions="0.65" prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
            <items>
                <BorderPane>
                    <center>
                        <TradespaceView fx:id="tradespaceView" />
                    </center>
                    <top>
                        <ToolBar BorderPane.alignment="CENTER">
                            <Button minWidth="28" mnemonicParsing="false" onAction="#refreshView" text="">
                                <tooltip>
                                    <Tooltip text="Refresh" />
                                </tooltip>
                                <graphic>
                                    <Glyph fontFamily="FontAwesome" icon="REFRESH" />
                                </graphic>
                            </Button>
                            <Pane HBox.hgrow="ALWAYS" />
                            <Button minWidth="28" mnemonicParsing="false" onAction="#saveDiagram" text="">
                                <tooltip>
                                    <Tooltip text="Save the diagram as image file" />
                                </tooltip>
                                <graphic>
                                    <Glyph fontFamily="FontAwesome" icon="SAVE" />
                                </graphic>
                            </Button>
                        </ToolBar>
                    </top>
                </BorderPane>
                <FiguresOfMeritEditor fx:id="figuresOfMeritEditor" />
            </items>
        </SplitPane>
    </children>
</AnchorPane>
