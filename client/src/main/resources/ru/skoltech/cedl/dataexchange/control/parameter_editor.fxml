<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.40"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane fx:id="propertyPane" hgap="8.0" vgap="4.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="8.0"
                  AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <Label text="Name" GridPane.halignment="RIGHT"/>
                <Label text="Nature" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
                <Label text="Value Source" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
                <Label text="Value" GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
                <Label text="Export" GridPane.halignment="RIGHT" GridPane.rowIndex="5"/>
                <Label text="Description" GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>
                <TextField fx:id="nameText" promptText="name" GridPane.columnIndex="1"/>
                <ChoiceBox fx:id="natureChoiceBox" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ChoiceBox fx:id="valueSourceChoiceBox" prefWidth="120.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>
                <TextField fx:id="valueText" prefWidth="80.0" promptText="0123.45" GridPane.columnIndex="1"
                           GridPane.rowIndex="3"/>
                <HBox spacing="16.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <children>
                        <CheckBox fx:id="isExportedCheckbox" mnemonicParsing="false" prefWidth="120.0" text="">
                            <HBox.margin>
                                <Insets top="4.0"/>
                            </HBox.margin>
                        </CheckBox>
                    </children>
                </HBox>
                <TextArea fx:id="descriptionText" prefHeight="50.0" prefWidth="200.0" promptText="description"
                          GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6"/>
                <Label text="Override Value" GridPane.halignment="RIGHT" GridPane.rowIndex="4"/>
                <TextField fx:id="valueOverrideText" prefWidth="120.0" promptText="0123.45" GridPane.columnIndex="2"
                           GridPane.rowIndex="4"/>
                <VBox GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <children>
                        <HBox fx:id="referenceSelectorGroup" prefWidth="200.0">
                            <children>
                                <TextField fx:id="valueReferenceText" editable="false" prefWidth="200.0"
                                           promptText="reference"/>
                                <Button mnemonicParsing="false" onAction="#chooseSource" text="Ref"/>
                            </children>
                        </HBox>
                        <HBox fx:id="linkSelectorGroup" prefWidth="200.0">
                            <children>
                                <TextField fx:id="parameterLinkText" editable="false" prefWidth="200.0"
                                           promptText="link"/>
                                <Button mnemonicParsing="false" onAction="#chooseParameter" text="Link"/>
                            </children>
                        </HBox>
                        <HBox fx:id="calculationGroup" prefWidth="200.0">
                            <children>
                                <TextField fx:id="calculationText" editable="false" prefWidth="200.0"
                                           promptText="calculation"/>
                                <Button mnemonicParsing="false" onAction="#editCalculation" text="Calc"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <ChoiceBox fx:id="unitChoiceBox" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <HBox fx:id="exportSelectorGroup" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="5">
                    <children>
                        <TextField fx:id="exportReferenceText" editable="false" prefWidth="200.0"
                                   promptText="reference"/>
                        <Button mnemonicParsing="false" onAction="#chooseTarget" text="Ref"/>
                    </children>
                </HBox>
                <CheckBox fx:id="isReferenceValueOverriddenCheckbox" mnemonicParsing="false" GridPane.columnIndex="1"
                          GridPane.rowIndex="4"/>
            </children>
        </GridPane>
        <ButtonBar layoutX="8.0" layoutY="316.0" prefHeight="40.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <buttons>
                <Button mnemonicParsing="true" onAction="#revertChanges" text="Rever_t"/>
                <Button mnemonicParsing="true" onAction="#applyChanges" text="_Apply"/>
            </buttons>
            <padding>
                <Insets right="8.0"/>
            </padding>
        </ButtonBar>
    </children>
</fx:root>
