<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.spreadsheet.SpreadsheetView?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="480.0" prefWidth="800.0"
            fx:controller="ru.skoltech.cedl.dataexchange.controller.SourceSelectorController">
    <children>
        <BorderPane prefHeight="480.0" prefWidth="640.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <HBox spacing="24.0" BorderPane.alignment="CENTER_LEFT">
                    <children>
                        <ComboBox fx:id="attachmentChooser" prefWidth="200.0"/>
                        <Button fx:id="openButton" mnemonicParsing="false" onAction="#openSpreadsheet" text="Open"/>
                        <TextField fx:id="referenceText" editable="false" prefWidth="200.0" promptText="cellName"/>
                        <Button fx:id="chooseCellButton" mnemonicParsing="false" onAction="#chooseSelectedCell"
                                text="Choose Cell"/>
                        <Button fx:id="acceptAndCloseButton" mnemonicParsing="false" onAction="#acceptAndClose"
                                text="Accept &amp; Close"/>
                    </children>
                </HBox>
            </top>
            <center>
                <SpreadsheetView fx:id="spreadsheetView" editable="false" prefWidth="500.0"
                                 BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
