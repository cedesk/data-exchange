<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@styling.css"
            xmlns="http://javafx.com/javafx/8.0.112"
            prefWidth="400" prefHeight="300"
            fx:controller="ru.skoltech.cedl.dataexchange.ui.controller.StudyRevisionsController">
    <center>
        <BorderPane>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <center>
                <TableView fx:id="tagTableView" prefHeight="100">
                    <columns>
                        <TableColumn fx:id="dateColumn" editable="false" prefWidth="60.0" text="Date">
                            <cellValueFactory>
                                <PropertyValueFactory property="nature"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="tagColumn" editable="false" prefWidth="150.0" text="Tag">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="revisionColumn" editable="false" prefWidth="150.0" text="Revision">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </center>
        </BorderPane>
    </center>
    <bottom>
        <ToolBar nodeOrientation="RIGHT_TO_LEFT">
            <Button fx:id="loadButton" defaultButton="true" mnemonicParsing="false"
                    onAction="#load" text="Load"/>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#close"
                    text="Cancel"/>
        </ToolBar>
    </bottom>
</BorderPane>
