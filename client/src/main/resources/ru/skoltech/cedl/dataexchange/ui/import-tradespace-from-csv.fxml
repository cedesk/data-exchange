<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.skoltech.cedl.dataexchange.ui.controller.ImportTradespaceFromCsvController">
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="315.0" minWidth="10.0" prefWidth="193.0" />
                    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="407.0" minWidth="10.0" prefWidth="407.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label text="Choose *.csv file for import:">
                    <padding>
                        <Insets right="5.0" />
                    </padding>
                </Label>
                <Label text="Start import at row:" GridPane.rowIndex="1">
                    <padding>
                        <Insets right="5.0" />
                    </padding>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1">
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                    <TextField fx:id="filePathTextField" editable="false" prefWidth="330.0" />
                    <Button mnemonicParsing="false" onAction="#chooseCsvFile" text="Choose" />
                </HBox>
                <Spinner fx:id="firstRowSpinner" editable="true" prefWidth="80.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" />
                    </GridPane.margin>
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory fx:id="firstRowSpinnerValueFactory" max="1" min="1" />
                    </valueFactory>
                </Spinner>
            </GridPane>
            <BorderPane prefHeight="140.0" prefWidth="580.0">
                <top>
                    <Label text="Data preview:" BorderPane.alignment="CENTER_LEFT" />
                </top>
                <center>
                    <TextArea fx:id="fileLinesTextArea" editable="false" prefHeight="108.0" prefWidth="580.0" BorderPane.alignment="CENTER" />
                </center>
            </BorderPane>
            <GridPane hgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="90.0" />
                    <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="253.0" minWidth="10.0" prefWidth="192.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="174.0" minWidth="10.0" prefWidth="90.0" />
                    <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="239.0" minWidth="10.0" prefWidth="192.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label prefHeight="17.0" prefWidth="65.0" text="Delimiter:" />
                <Label text="Text qualifier:" GridPane.columnIndex="2" />
                <ComboBox fx:id="delimiterComboBox" prefWidth="75.0" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value=","/>
                            <String fx:value="."/>
                            <String fx:value=":" />
                            <String fx:value="Tab" />
                            <String fx:value="Space" />
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="," />
                    </value>
                </ComboBox>
                <TextField fx:id="qualifierTextField" alignment="CENTER_RIGHT" prefWidth="20.0" text="&quot;" GridPane.columnIndex="3" />
            </GridPane>
            <GridPane hgap="10.0" prefHeight="180.0" prefWidth="680.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <top>
                        <Label text="Choose Description (single choice):" BorderPane.alignment="TOP_LEFT" />
                    </top>
                    <center>
                        <ListView fx:id="descriptionListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
                <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
                    <top>
                        <Label text="Choose Figures of Merit (multi choice):" BorderPane.alignment="CENTER_LEFT" />
                    </top>
                    <center>
                        <ListView fx:id="figuresOfMeritListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
                <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2">
                    <top>
                        <Label text="Choose Epoch (single choice):" BorderPane.alignment="CENTER_LEFT" />
                    </top>
                    <center>
                        <ListView fx:id="epochsListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
            </GridPane>
        </VBox>
    </center>
    <bottom>
        <ToolBar prefWidth="618.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Pane HBox.hgrow="ALWAYS" />
            <Button minWidth="28" onAction="#cancel" text="_Cancel" />
            <Button fx:id="importButton" minWidth="28" onAction="#importTradespace" text="_Import" />
        </ToolBar>
    </bottom>
</BorderPane>
