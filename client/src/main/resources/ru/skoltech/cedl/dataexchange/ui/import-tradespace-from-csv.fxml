<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.skoltech.cedl.dataexchange.ui.controller.ImportTradespaceFromCsvController">
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
             <children>

            <GridPane>
                <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="315.0" minWidth="10.0" prefWidth="193.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="407.0" minWidth="10.0" prefWidth="407.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Choose *.csv frin for import:">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </Label>
                  <Label text="Start import at row:" GridPane.rowIndex="1">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </Label>
                   <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1">
                       <children>
                           <TextField editable="false" prefWidth="330.0" />
                           <Button mnemonicParsing="false" text="Choose" />
                       </children>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                   </HBox>
                  <Spinner editable="true" prefWidth="80.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="5.0" />
                     </GridPane.margin>
                  </Spinner>

               </children>
            </GridPane>
            <BorderPane prefHeight="90.0" prefWidth="580.0">
               <top>
                  <Label text="Data preview:" BorderPane.alignment="CENTER_LEFT" />
               </top>
               <center>
                  <TextArea editable="false" prefHeight="108.0" prefWidth="580.0" BorderPane.alignment="CENTER" />
               </center></BorderPane>
            <GridPane hgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="90.0" />
                  <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="253.0" minWidth="10.0" prefWidth="192.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="174.0" minWidth="10.0" prefWidth="90.0" />
                <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="239.0" minWidth="10.0" prefWidth="192.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label prefHeight="17.0" prefWidth="65.0" text="Delimiter:" />
                  <Label text="Text qualifier:" GridPane.columnIndex="2" />
                  <TextField alignment="CENTER_RIGHT" prefWidth="20.0" text="," GridPane.columnIndex="1" />
                  <TextField alignment="CENTER_RIGHT" prefWidth="20.0" text="&quot;" GridPane.columnIndex="3" />
               </children>
            </GridPane>
            <GridPane hgap="10.0" prefHeight="140.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <top>
                        <Label text="Choose Figures of Merit (multi choise):" BorderPane.alignment="CENTER_LEFT" />
                     </top>
                     <center>
                        <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
                  <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
                     <top>
                        <Label text="Choose Epoch (single choise):" BorderPane.alignment="CENTER_LEFT" />
                     </top>
                     <center>
                        <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
               </children>
            </GridPane>
         </children>
        </VBox>
    </center>
    <bottom>
        <ToolBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Pane HBox.hgrow="ALWAYS" />
            <Button minWidth="28" onAction="#cancel" text="_Cancel" />
            <Button minWidth="28" onAction="#importTradespace" text="_Import" />
        </ToolBar>
    </bottom>
</BorderPane>
