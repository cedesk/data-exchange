<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.glyphfont.Glyph?>
<AnchorPane prefHeight="600.0" prefWidth="1100.0" stylesheets="@styling.css" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.skoltech.cedl.dataexchange.ui.controller.TradespaceController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <top>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Button mnemonicParsing="false" onAction="#loadTradespace" text="Load"/>
                <Button mnemonicParsing="false" onAction="#saveTradespace" text="Save"/>
                <Separator orientation="VERTICAL"/>
                <Button mnemonicParsing="false" onAction="#importTadespaceFromCSV" text="Import CSV"/>
                <Button mnemonicParsing="false" onAction="#importTadespaceFromExcel" text="Import Excel"/>
                <Separator orientation="VERTICAL"/>
                <Label fx:id="studyNameLabel" styleClass="projectDetailsLabels" graphicTextGap="6" text="--">
                    <HBox.margin>
                        <Insets right="4.0"/>
                    </HBox.margin>
                    <tooltip>
                        <Tooltip text="Project"/>
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="CUBE"/>
                    </graphic>
                </Label>
            </ToolBar>
        </top>
        <center>
            <SplitPane dividerPositions="0.55" prefHeight="600.0" prefWidth="900.0">
                <AnchorPane SplitPane.resizableWithParent="true">
                    <TabPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                             AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <Tab fx:id="tradespaceScatterPlotParent" closable="false" text="Scatter Chart"/>
                        <Tab fx:id="tradespacePolarPlotParent" closable="false" text="Polar Chart"/>
                    </TabPane>
                </AnchorPane>
                <BorderPane>
                    <center>
                        <TitledPane fx:id="figuresOfMeritEditorPane" collapsible="false"
                                    text="Figures of Merit Definitions">
                            <BorderPane>
                                <padding>
                                    <Insets/>
                                </padding>
                                <center>
                                    <TableView fx:id="figureOfMeritTable">
                                        <columns>
                                            <TableColumn fx:id="nameColumn" editable="false" text="Name"/>
                                            <TableColumn fx:id="unitColumn" editable="false" text="Unit"/>
                                            <TableColumn fx:id="optimalityColumn" editable="false" maxWidth="75"
                                                         minWidth="75" text="Optimality"/>
                                            <TableColumn fx:id="parameterLinkColumn" editable="false" minWidth="120"
                                                         text="Parameter Link"/>
                                            <TableColumn fx:id="deleteColumn" maxWidth="30" minWidth="30"/>
                                        </columns>
                                    </TableView>
                                </center>
                                <bottom>
                                    <ToolBar nodeOrientation="RIGHT_TO_LEFT">
                                        <Button minWidth="28" mnemonicParsing="false" onAction="#addFigureOfMerit">
                                            <tooltip>
                                                <Tooltip text="Add external model"/>
                                            </tooltip>
                                            <graphic>
                                                <Glyph fontFamily="FontAwesome" icon="PLUS"/>
                                            </graphic>
                                        </Button>
                                    </ToolBar>
                                </bottom>
                            </BorderPane>
                        </TitledPane>
                    </center>
                    <bottom>
                        <BorderPane>
                            <center>
                                <TitledPane collapsible="false" text="Epochs">
                                    <HBox>
                                        <TextField fx:id="epochText" editable="false" prefWidth="300"/>
                                        <Button minWidth="28" mnemonicParsing="false" onAction="#editEpochs">
                                            <tooltip>
                                                <Tooltip text="Edit the epochs"/>
                                            </tooltip>
                                            <graphic>
                                                <Glyph fontFamily="FontAwesome" icon="EDIT"/>
                                            </graphic>
                                        </Button>
                                    </HBox>
                                </TitledPane>
                            </center>
                            <bottom>
                                <TitledPane collapsible="false" text="Current Design Point">
                                    <BorderPane>
                                        <padding>
                                            <Insets/>
                                        </padding>
                                        <center>
                                            <BorderPane>
                                                <padding>
                                                    <Insets top="5" right="5" bottom="5" left="5"/>
                                                </padding>
                                                <center>
                                                    <TextArea fx:id="figureOfMeritValuesText" editable="false"
                                                              prefHeight="120.0">
                                                    </TextArea>
                                                </center>
                                            </BorderPane>
                                        </center>
                                        <right>
                                            <BorderPane>
                                                <center>
                                                    <BorderPane>
                                                        <padding>
                                                            <Insets top="5" right="5" bottom="5" left="5"/>
                                                        </padding>
                                                        <center>
                                                            <ListView fx:id="epochListView" prefWidth="80.0"
                                                                      prefHeight="120.0"/>
                                                        </center>
                                                    </BorderPane>
                                                </center>
                                                <!--<bottom>-->
                                                <!--<ToolBar>-->
                                                <!--<Button fx:id="addDesignPointButton" mnemonicParsing="false"-->
                                                <!--onAction="#addDesignPoint"-->
                                                <!--text="Add to Tradespace"/>-->
                                                <!--</ToolBar>-->
                                                <!--</bottom>-->
                                            </BorderPane>
                                        </right>
                                    </BorderPane>
                                </TitledPane>
                            </bottom>
                        </BorderPane>
                    </bottom>
                </BorderPane>
            </SplitPane>
        </center>
    </BorderPane>
</AnchorPane>
