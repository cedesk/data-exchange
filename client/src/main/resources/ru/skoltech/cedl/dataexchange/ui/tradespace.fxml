<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.glyphfont.Glyph?>
<BorderPane prefHeight="600.0" prefWidth="1100.0" stylesheets="@styling.css" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.skoltech.cedl.dataexchange.ui.controller.TradespaceController">
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" onAction="#newTradespace" text="New"/>
            <Button mnemonicParsing="false" onAction="#loadTradespace" text="Load"/>
            <Button mnemonicParsing="false" fx:id="saveTradespaceButton" onAction="#saveTradespace" text="Save"/>
            <Separator orientation="VERTICAL"/>
            <Button mnemonicParsing="false" onAction="#importTadespaceFromCSV" text="Import CSV"/>
            <Button mnemonicParsing="false" onAction="#importTadespaceFromExcel" text="Import Excel"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="studyNameLabel" styleClass="projectDetailsLabels" graphicTextGap="6" text="--">
                <HBox.margin>
                    <Insets right="4.0"/>
                </HBox.margin>
                <tooltip>
                    <Tooltip text="Project"/>
                </tooltip>
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="CUBE"/>
                </graphic>
            </Label>
        </ToolBar>
    </top>
    <center>
        <SplitPane dividerPositions="0.55" prefHeight="600.0" prefWidth="900.0">
            <AnchorPane SplitPane.resizableWithParent="true">
                <TabPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <Tab fx:id="tradespaceScatterPlotParent" closable="false" text="Scatter Chart"/>
                    <Tab fx:id="tradespacePolarPlotParent" closable="false" text="Polar Chart"/>
                </TabPane>
            </AnchorPane>
            <BorderPane>
                <center>
                    <TitledPane collapsible="false" text="Figures of Merit Definitions">
                        <BorderPane>
                            <padding>
                                <Insets/>
                            </padding>
                            <center>
                                <TableView fx:id="figureOfMeritTable">
                                    <columns>
                                        <TableColumn fx:id="figureOfMeritNameColumn" editable="false" text="Name"/>
                                        <TableColumn fx:id="figureOfMeritUnitColumn" editable="false" text="Unit"/>
                                        <TableColumn fx:id="figureOfMeritOptimalityColumn" editable="false"
                                                     maxWidth="75"
                                                     minWidth="75" text="Optimality"/>
                                        <TableColumn fx:id="figureOfMeritParameterLinkColumn" editable="false"
                                                     minWidth="120"
                                                     text="Parameter Link"/>
                                        <TableColumn fx:id="figureOfMeritDeleteColumn" maxWidth="30" minWidth="30"/>
                                    </columns>
                                </TableView>
                            </center>
                            <bottom>
                                <ToolBar nodeOrientation="RIGHT_TO_LEFT">
                                    <Button minWidth="28" mnemonicParsing="false" onAction="#addFigureOfMerit">
                                        <tooltip>
                                            <Tooltip text="Add external model"/>
                                        </tooltip>
                                        <graphic>
                                            <Glyph fontFamily="FontAwesome" icon="PLUS"/>
                                        </graphic>
                                    </Button>
                                </ToolBar>
                            </bottom>
                        </BorderPane>
                    </TitledPane>
                </center>
                <bottom>
                    <BorderPane>
                        <center>
                            <TitledPane collapsible="false" text="Current Design Point">
                                <BorderPane>
                                    <padding>
                                        <Insets/>
                                    </padding>
                                    <center>
                                        <BorderPane>
                                            <padding>
                                                <Insets top="5" bottom="5" left="5"/>
                                            </padding>
                                            <center>
                                                <TextArea fx:id="figureOfMeritValuesText" editable="false"
                                                          prefHeight="120.0">
                                                </TextArea>
                                            </center>
                                        </BorderPane>
                                    </center>
                                    <right>
                                        <BorderPane>
                                            <padding>
                                                <Insets top="5" right="5" bottom="5" left="5"/>
                                            </padding>
                                            <top>
                                                <Text text="Epochs:"/>
                                            </top>
                                            <center>
                                                <BorderPane>
                                                    <center>
                                                        <TableView fx:id="epochTable" prefWidth="100" prefHeight="150">
                                                            <columns>
                                                                <TableColumn fx:id="epochNameColumn" editable="false"
                                                                             text="Name"/>
                                                                <TableColumn fx:id="epochDeleteColumn" maxWidth="30"
                                                                             minWidth="30"/>
                                                            </columns>
                                                        </TableView>
                                                    </center>
                                                </BorderPane>
                                            </center>
                                            <bottom>
                                                <Button fx:id="addEpochButton"
                                                        onAction="#addEpoch" text="Add to Tradespace"/>
                                            </bottom>
                                        </BorderPane>
                                    </right>
                                </BorderPane>
                            </TitledPane>
                        </center>
                    </BorderPane>
                </bottom>
            </BorderPane>
        </SplitPane>
    </center>
</BorderPane>
