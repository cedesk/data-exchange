<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.glyphfont.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@styling.css" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="ru.skoltech.cedl.dataexchange.ui.controller.MainController"
            maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700.0" prefWidth="1000.0">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                fx:id="layoutPane">
        <center>
        </center>
        <top>
            <HBox prefHeight="48.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                <VBox HBox.hgrow="ALWAYS">
                    <MenuBar>
                        <Menu text="_Project">
                            <MenuItem onAction="#newProject" text="_New..."/>
                            <MenuItem onAction="#openProject" text="_Open..."/>
                            <MenuItem onAction="#openStudyRevisionsView" text="_Load tagged revision..."/>
                            <MenuItem onAction="#saveProject" text="_Save"/>
                            <MenuItem fx:id="tagMenu" onAction="#tagStudy" text="_Tag current revision"/>
                            <SeparatorMenuItem/>
                            <MenuItem onAction="#importProject" text="_Import"/>
                            <MenuItem fx:id="exportMenu" onAction="#exportProject" text="_Export"/>
                            <SeparatorMenuItem/>
                            <MenuItem fx:id="deleteMenu" onAction="#deleteProject" text="_Delete..."/>
                            <SeparatorMenuItem/>
                            <MenuItem onAction="#quit" text="_Quit"/>
                        </Menu>
                        <Menu text="_Edit">
                            <MenuItem fx:id="usersMenu" onAction="#openUserManagement" text="Users"/>
                            <MenuItem fx:id="usersAndDisciplinesMenu" onAction="#openUserRoleManagement"
                                      text="User-Discipline Assignment"/>
                            <MenuItem onAction="#openUnitManagement" text="Units and _Measures"/>
                            <CheckMenuItem fx:id="libraryViewMenu" text="Component _Library"/>
                            <SeparatorMenuItem/>
                            <MenuItem onAction="#openProjectSettingsDialog" text="_Project Settings"/>
                            <MenuItem onAction="#openRepositorySettingsDialog" text="_Repository Settings"/>
                        </Menu>
                        <Menu text="_View">
                            <MenuItem onAction="#openConsistencyView" text="Consistency"/>
                            <MenuItem onAction="#openDiffView" text="Differences"/>
                            <MenuItem onAction="#openDsmView" text="Design Structure Matrix"/>
                            <MenuItem onAction="#openDependencyView" text="N-square Chart"/>
                        </Menu>
                        <Menu text="_Tools">
                            <MenuItem onAction="#openTradespaceExplorer" text="Tradespace Explorer"/>
                            <MenuItem onAction="#runWorkSessionAnalysis" text="Run Work Session Analysis"/>
                            <MenuItem onAction="#openChangeHistoryAnalysis" text="Change History Analyis"/>
                        </Menu>
                        <Menu text="_Help">
                            <MenuItem onAction="#checkForApplicationUpdate" text="Check for _Update"/>
                            <MenuItem onAction="#openGuideDialog" text="_Process Guide"/>
                            <MenuItem onAction="#openAboutDialog" text="_About"/>
                        </Menu>
                    </MenuBar>
                    <ToolBar>
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                        <Button fx:id="newButton" onAction="#newProject">
                            <tooltip>
                                <Tooltip text="New Project"/>
                            </tooltip>
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="FILE_TEXT"/>
                            </graphic>
                        </Button>
                        <Button fx:id="loadButton" onAction="#reloadProject">
                            <tooltip>
                                <Tooltip text="Reload Project"/>
                            </tooltip>
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="RETWEET"/>
                            </graphic>
                        </Button>
                        <Button fx:id="saveButton" onAction="#saveProject">
                            <tooltip>
                                <Tooltip text="Save current study"/>
                            </tooltip>
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="SAVE"/>
                            </graphic>
                        </Button>
                        <Separator orientation="VERTICAL"/>
                        <Button fx:id="diffButton" onAction="#openDiffView">
                            <tooltip>
                                <Tooltip text="View Changes"/>
                            </tooltip>
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="INBOX"/>
                            </graphic>
                        </Button>
                        <Separator orientation="VERTICAL"/>
                        <HBox fillHeight="false" spacing="8">
                            <Label fx:id="studyNameLabel" styleClass="projectDetailsLabels" graphicTextGap="6"
                                   text="--">
                                <tooltip>
                                    <Tooltip text="Project"/>
                                </tooltip>
                                <graphic>
                                    <Glyph fontFamily="FontAwesome" icon="CUBE"/>
                                </graphic>
                            </Label>
                            <Label fx:id="tagLabel" styleClass="projectDetailsLabels" graphicTextGap="6" text="--">
                                <tooltip>
                                    <Tooltip text="Tag"/>
                                </tooltip>
                                <graphic>
                                    <Glyph fontFamily="FontAwesome" icon="TAG"/>
                                </graphic>
                            </Label>
                            <Label fx:id="userNameLabel" styleClass="projectDetailsLabels" graphicTextGap="6" text="--">
                                <tooltip>
                                    <Tooltip text="User"/>
                                </tooltip>
                                <graphic>
                                    <Glyph fontFamily="FontAwesome" icon="USER_TIMES"/>
                                </graphic>
                            </Label>
                            <Label fx:id="userRoleLabel" styleClass="projectDetailsLabels" graphicTextGap="6" text="--">
                                <tooltip>
                                    <Tooltip text="Roles"/>
                                </tooltip>
                                <graphic>
                                    <Glyph fontFamily="FontAwesome" icon="USERS"/>
                                </graphic>
                            </Label>
                        </HBox>
                    </ToolBar>
                </VBox>
                <ImageView fitHeight="60.0" fitWidth="100.0">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <Image url="@controller/cedesk-logo.png"/>
                </ImageView>
            </HBox>
        </top>
    </BorderPane>
</AnchorPane>
