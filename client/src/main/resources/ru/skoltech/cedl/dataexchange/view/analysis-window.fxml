<AnchorPane prefHeight="600.0" prefWidth="1200.0" stylesheets="@styling.css" xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.skoltech.cedl.dataexchange.controller.ChangeAnalysisController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <top>
                <ToolBar>
                    <Button minWidth="28" mnemonicParsing="false" onAction="#refreshView" text="">
                        <tooltip>
                            <Tooltip text="Refresh"/>
                        </tooltip>
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="REFRESH"/>
                        </graphic>
                    </Button>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button minWidth="28" mnemonicParsing="false" onAction="#saveDiagram" text="">
                        <tooltip>
                            <Tooltip text="Save the diagram as image file"/>
                        </tooltip>
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="SAVE"/>
                        </graphic>
                    </Button>
                </ToolBar>
            </top>
            <center>
                <ScrollPane>
                    <ChangeAnalysisView fx:id="changeAnalysisView" prefHeight="700" prefWidth="1400.0"
                                        BorderPane.alignment="CENTER"/>
                </ScrollPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
