<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.FlowPane?>
<?import org.controlsfx.glyphfont.Glyph?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         style="-fx-border-width: 1; -fx-border-color: grey; -fx-border-style: solid;" stylesheets="@../view/styling.css" type="javafx.scene.layout.FlowPane"
         xmlns="http://javafx.com/javafx/8.0.112">
    <children>
        <TextField fx:id="figureOfMeritNameText" editable="false" prefWidth="140.0" promptText="figure of merit"/>
        <TextField fx:id="parameterLinkText" editable="false" prefWidth="160.0" promptText="SubsystemA::parameter1">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <FlowPane.margin>
                <Insets left="6.0"/>
            </FlowPane.margin>
        </TextField>
        <Button minWidth="28" mnemonicParsing="false" onAction="#chooseParameter" text="">
            <tooltip>
                <Tooltip text="Choose parameter to link to"/>
            </tooltip>
            <graphic>
                <Glyph fontFamily="FontAwesome" icon="LINK"/>
            </graphic>
        </Button>
    </children>
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
    </padding>
</fx:root>
