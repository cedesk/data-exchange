<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="1200.0" stylesheets="@styling.css"
            xmlns="http://javafx.com/javafx/8.0.112"
            fx:controller="ru.skoltech.cedl.dataexchange.controller.DiffController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <top>
                <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <items>
                        <Button minWidth="28" mnemonicParsing="false" onAction="#refreshView" text="">
                            <tooltip>
                                <Tooltip text="Refresh"/>
                            </tooltip>
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="REFRESH"/>
                            </graphic>
                        </Button>
                    </items>
                </ToolBar>
            </top>
            <center>
                <TableView fx:id="diffTable" BorderPane.alignment="CENTER" prefHeight="400" prefWidth="500.0">
                    <columns>
                        <TableColumn prefWidth="120.0" text="Author">
                            <cellValueFactory>
                                <PropertyValueFactory property="author"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="80.0" text="Change Type">
                            <cellValueFactory>
                                <PropertyValueFactory property="changeType"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="elementTypeColumn" prefWidth="80.0" text="Element Type">
                        </TableColumn>
                        <TableColumn prefWidth="240.0" text="Element Path">
                            <cellValueFactory>
                                <PropertyValueFactory property="elementPath"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="180.0" text="Attribute">
                            <cellValueFactory>
                                <PropertyValueFactory property="attribute"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="140.0" text="Local Value">
                            <cellValueFactory>
                                <PropertyValueFactory property="value1"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="140.0" text="Repository Value">
                            <cellValueFactory>
                                <PropertyValueFactory property="value2"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="actionColumn" prefWidth="140.0" text="Action">
                        </TableColumn>
                    </columns>
                </TableView>
            </center>
            <bottom>
                <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="30.0" prefWidth="200.0"
                         BorderPane.alignment="CENTER">
                    <items>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#close" text="Cancel"/>
                        <Button fx:id="acceptAllButton" mnemonicParsing="true" onAction="#acceptAll"
                                text="_Accept all remote remote changes"/>
                        <Button fx:id="revertAllButton" mnemonicParsing="true" onAction="#revertAll"
                                text="_Revert all local changes"/>
                    </items>
                </ToolBar>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
