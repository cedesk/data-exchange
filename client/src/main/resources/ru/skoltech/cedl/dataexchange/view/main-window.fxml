<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="applicationPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@styling.css" xmlns="http://javafx.com/javafx/8.0.112-ea"
            fx:controller="ru.skoltech.cedl.dataexchange.controller.MainController">
    <children>
        <BorderPane fx:id="layoutPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
            </center>
            <top>
                <HBox prefHeight="48.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <MenuBar>
                                    <menus>
                                        <Menu text="_Project">
                                            <items>
                                                <MenuItem onAction="#newProject" text="_New..."/>
                                                <MenuItem onAction="#openProject"
                                                          text="_Open..."/>
                                                <MenuItem onAction="#saveProject" text="_Save"/>
                                                <SeparatorMenuItem/>
                                                <MenuItem onAction="#importProject"
                                                          text="_Import"/>
                                                <MenuItem fx:id="exportMenu"
                                                          onAction="#exportProject" text="_Export"/>
                                                <SeparatorMenuItem/>
                                                <MenuItem fx:id="deleteMenu"
                                                          onAction="#deleteProject" text="_Delete..."/>
                                                <SeparatorMenuItem/>
                                                <MenuItem onAction="#quit" text="_Quit"/>
                                            </items>
                                        </Menu>
                                        <Menu text="_Edit">
                                            <items>
                                                <MenuItem fx:id="usersMenu"
                                                          onAction="#openUserManagement" text="Users"/>
                                                <MenuItem fx:id="usersAndDisciplinesMenu"
                                                          onAction="#openUserRoleManagement"
                                                          text="User-Discipline Assignment"/>
                                                <MenuItem onAction="#openUnitManagement"
                                                          text="Units and _Measures"/>
                                                <SeparatorMenuItem/>
                                                <MenuItem onAction="#openProjectSettingsDialog"
                                                          text="_Project Settings"/>
                                                <MenuItem
                                                        onAction="#openRepositorySettingsDialog"
                                                        text="_Repository Settings"/>
                                            </items>
                                        </Menu>
                                        <Menu text="_View">
                                            <items>
                                                <MenuItem
                                                        onAction="#openConsistencyView" text="Consistency"/>
                                                <MenuItem
                                                        onAction="#openDiffView" text="Differences"/>
                                                <MenuItem
                                                        onAction="#openDsmView" text="Design Structure Matrix"/>
                                                <MenuItem
                                                        onAction="#openDepencencyView" text="N-square Chart"/>
                                            </items>
                                        </Menu>
                                        <Menu text="_Help">
                                            <items>
                                                <MenuItem onAction="#checkForApplicationUpdate"
                                                          text="Check for _Update"/>
                                            </items>
                                            <items>
                                                <MenuItem onAction="#openGuideDialog"
                                                          text="_Process Guide"/>
                                            </items>
                                            <items>
                                                <MenuItem onAction="#openAboutDialog"
                                                          text="_About"/>
                                            </items>
                                        </Menu>

                                    </menus>
                                </MenuBar>
                                <ToolBar>
                                    <items>
                                        <Button fx:id="newButton" onAction="#newProject"
                                                text="_New"/>
                                        <Separator orientation="VERTICAL"/>
                                        <Button fx:id="loadButton" onAction="#reloadProject"
                                                text="_Reload"/>
                                        <Button fx:id="saveButton" layoutX="10.0" layoutY="13.0"
                                                onAction="#saveProject" text="_Save"/>
                                        <Separator orientation="VERTICAL"/>
                                        <Button fx:id="diffButton" onAction="#openDiffView"
                                                text="View _Changes"/>
                                        <Separator orientation="VERTICAL"/>
                                        <HBox fillHeight="false">
                                            <children>
                                                <Label styleClass="projectDetailsLabels" text="Project:">
                                                    <HBox.margin>
                                                        <Insets right="4.0"/>
                                                    </HBox.margin>
                                                </Label>
                                                <Label fx:id="studyNameLabel" styleClass="projectDetailsText" text="--">
                                                </Label>
                                                <Label styleClass="projectDetailsLabels" text="User:">
                                                    <HBox.margin>
                                                        <Insets left="20.0" right="4.0"/>
                                                    </HBox.margin>
                                                </Label>
                                                <Label fx:id="userNameLabel" styleClass="projectDetailsText" text="--">
                                                </Label>
                                                <Label styleClass="projectDetailsLabels" text="Roles:">
                                                    <HBox.margin>
                                                        <Insets left="20.0" right="4.0"/>
                                                    </HBox.margin>
                                                </Label>
                                                <Label fx:id="userRoleLabel" styleClass="projectDetailsText" text="--">
                                                </Label>
                                            </children>
                                            <padding>
                                                <Insets bottom="3.0" left="6.0" right="3.0" top="6.0"/>
                                            </padding>
                                        </HBox>
                                    </items>
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                </ToolBar>
                            </children>
                        </VBox>
                        <ImageView fitHeight="60.0" fitWidth="100.0">
                            <image>
                                <Image url="@../controller/cedesk-logo.png"/>
                            </image>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
            </top>
            <center>
            </center>
            <right>
            </right>
            <bottom>
                <AnchorPane prefHeight="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="statusbarLabel" prefHeight="20.0" prefWidth="703.0" text="Statusbar"
                               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
