<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <GridPane hgap="8.0" vgap="4.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="142.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="191.0" prefWidth="257.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="NEVER" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
            </rowConstraints>
            <children>
                <Label text="Operation" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="6.0" />
                    </GridPane.margin>
                </Label>
                <VBox spacing="4.0" GridPane.columnIndex="1">
                    <children>
                        <ChoiceBox fx:id="operationChoiceBox" prefWidth="100.0" />
                        <TextArea fx:id="operationDescriptionText" editable="false" prefHeight="200.0" prefWidth="150.0" text="Operation description" wrapText="true" />
                    </children>
                </VBox>
                <VBox fx:id="argumentsContainer" spacing="4.0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                    <children>

                    </children>
                </VBox>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addNewArgument" text="add" GridPane.rowIndex="2" />
            </children>
        </GridPane>
    </content>
</DialogPane>
