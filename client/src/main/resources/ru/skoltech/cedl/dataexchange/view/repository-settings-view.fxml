<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane stylesheets="@styling.css" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.skoltech.cedl.dataexchange.controller.RepositorySettingsController">
    <children>
        <VBox>
            <children>
                <TitledPane animated="false" text="Repository">
                    <content>
                        <GridPane hgap="8.0" vgap="2.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <TextField fx:id="dbHostnameText" promptText="hostname (leave empty to use default)" GridPane.columnIndex="1" />
                                <TextField fx:id="dbUsernameText" promptText="username (leave empty to use default)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="DB hostname">
                                    <GridPane.margin>
                                        <Insets />
                                    </GridPane.margin>
                                </Text>
                                <PasswordField fx:id="dbPasswordText" promptText="password (leave empty to use default)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="DB username" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets />
                                    </GridPane.margin>
                                </Text>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="DB password" GridPane.rowIndex="2">
                                    <GridPane.margin>
                                        <Insets />
                                    </GridPane.margin>
                                </Text>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
                <TitledPane animated="false" text="Information">
                    <content>
                        <GridPane hgap="8.0" vgap="2.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Working Directory">
                                    <GridPane.margin>
                                        <Insets right="8.0" />
                                    </GridPane.margin>
                                </Text>
                                <TextField fx:id="appDirText" editable="false" GridPane.columnIndex="1" />
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Repository Schema" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets right="8.0" />
                                    </GridPane.margin>
                                </Text>
                                <TextField fx:id="repoSchemaText" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
                <TitledPane animated="false" layoutX="10.0" layoutY="150.0" text="Watcher">
                    <content>
                        <GridPane hgap="8.0" vgap="2.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Auto Sync">
                                    <GridPane.margin>
                                        <Insets right="8.0" />
                                    </GridPane.margin>
                                </Text>
                                <CheckBox fx:id="repoWatcherAutoSyncCheckbox" mnemonicParsing="false" GridPane.columnIndex="1" />
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
                <ToolBar nodeOrientation="RIGHT_TO_LEFT">
                    <items>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#applyAndClose" text="Ok" />
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
