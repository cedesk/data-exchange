<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root hgap="8.0" maxWidth="-Infinity" prefWidth="500.0"
         style="-fx-border-width: 1px; -fx-border-color: grey; -fx-border-style: solid;"
         type="javafx.scene.layout.GridPane" vgap="2.0" xmlns="http://javafx.com/javafx/null"
         xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label fx:id="argNameText" text="Argument 0"/>
        <!--
                <Label fx:id="argDescriptionText" alignment="TOP_LEFT" prefHeight="50.0" prefWidth="150.0" text="Argument description" wrapText="true" GridPane.rowIndex="1" />
        -->
        <HBox spacing="4.0" GridPane.columnIndex="2">
            <children>
                <TextField fx:id="argNumericValueText"/>
                <TextField fx:id="argValueUnitText" disable="true"/>
            </children>
        </HBox>
        <HBox spacing="4.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <children>
                <TextField fx:id="argParameterValueLinkText" editable="false"/>
                <Button fx:id="argLinkButton" onAction="#chooseParameter" mnemonicParsing="false" text="choose"/>
            </children>
        </HBox>
        <RadioButton fx:id="literalRadio" mnemonicParsing="false" text="Value" GridPane.columnIndex="1"
                     GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="4.0"/>
            </GridPane.margin>
            <toggleGroup>
                <ToggleGroup fx:id="type"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="linkRadio" mnemonicParsing="false" text="Link" toggleGroup="$type" GridPane.columnIndex="1"
                     GridPane.rowIndex="1" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="4.0"/>
            </GridPane.margin>
        </RadioButton>
    </children>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</fx:root>
