<fx:root xmlns:fx="http://javafx.com/fxml/1" hgap="8.0" maxWidth="-Infinity"
         minWidth="600.0" type="javafx.scene.layout.GridPane" vgap="2.0"
         xmlns="http://javafx.com/javafx/null"
         styleClass="calculationArgument"
         stylesheets="@../view/styling.css">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label fx:id="argNameText" text="Argument 0"/>
        <!--
                <Label fx:id="argDescriptionText" alignment="TOP_LEFT" prefHeight="50.0" prefWidth="150.0" text="Argument description" wrapText="true" GridPane.rowIndex="1" />
        -->
        <HBox spacing="4.0" GridPane.columnIndex="2" alignment="CENTER_LEFT">
            <children>
                <TextField fx:id="argNumericValueText" prefWidth="150"/>
                <Label text="Unit"/>
                <TextField fx:id="argValueUnitText" prefWidth="150" disable="true"/>
            </children>
        </HBox>
        <HBox GridPane.columnIndex="2" GridPane.rowIndex="1">
            <children>
                <TextField fx:id="argParameterValueLinkText" minWidth="300" editable="false"/>
                <Button fx:id="argLinkButton" onAction="#chooseParameter" mnemonicParsing="false" text=""
                        minWidth="28">
                    <tooltip>
                        <Tooltip text="Choose parameter to link to"/>
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="LINK"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <RadioButton fx:id="literalRadio" mnemonicParsing="false" text="Value" GridPane.columnIndex="1"
                     GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="4.0"/>
            </GridPane.margin>
            <toggleGroup>
                <ToggleGroup fx:id="type"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="linkRadio" mnemonicParsing="false" text="Link" toggleGroup="$type" GridPane.columnIndex="1"
                     GridPane.rowIndex="1" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="4.0"/>
            </GridPane.margin>
        </RadioButton>
    </children>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</fx:root>
