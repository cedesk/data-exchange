<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>
<?import org.controlsfx.glyphfont.Glyph?>
<FlowPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@styling.css"
        style="-fx-border-width: 1; -fx-border-color: grey; -fx-border-style: solid;"
        fx:controller="ru.skoltech.cedl.dataexchange.ui.control.FigureOfMeritView">
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
    </padding>
    <TextField fx:id="figureOfMeritNameText" editable="false" prefWidth="140.0" promptText="figure of merit">
    </TextField>
    <TextField fx:id="unitOfMeasureText" prefWidth="120" promptText="unit of measure">
        <FlowPane.margin>
            <Insets left="6.0"/>
        </FlowPane.margin>
    </TextField>
    <ChoiceBox fx:id="optimalityChoice" prefWidth="80.0">
        <FlowPane.margin>
            <Insets left="6.0"/>
        </FlowPane.margin>
    </ChoiceBox>
    <TextField fx:id="parameterLinkText" editable="false" prefWidth="160.0" promptText="SubsystemA::parameter1">
        <FlowPane.margin>
            <Insets left="6.0"/>
        </FlowPane.margin>
    </TextField>
    <Button minWidth="28" mnemonicParsing="false" onAction="#chooseParameter">
        <tooltip>
            <Tooltip text="Choose parameter to link to"/>
        </tooltip>
        <graphic>
            <Glyph fontFamily="FontAwesome" icon="LINK"/>
        </graphic>
    </Button>
</FlowPane>
