<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://java.sun.com/xml/ns/persistence" version="2.0"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="db" transaction-type="RESOURCE_LOCAL">

        <description>HSQLDB Persistence Unit</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>ru.skoltech.cedl.dataexchange.db.CustomRevisionEntity</class>

        <class>ru.skoltech.cedl.dataexchange.structure.model.Study</class>
        <class>ru.skoltech.cedl.dataexchange.structure.model.SystemModel</class>
        <class>ru.skoltech.cedl.dataexchange.structure.model.SubSystemModel</class>
        <class>ru.skoltech.cedl.dataexchange.structure.model.ElementModel</class>
        <class>ru.skoltech.cedl.dataexchange.structure.model.InstrumentModel</class>
        <class>ru.skoltech.cedl.dataexchange.structure.model.ParameterModel</class>
        <class>ru.skoltech.cedl.dataexchange.structure.ExternalModel</class>
        <class>ru.skoltech.cedl.dataexchange.structure.model.ExternalModelReference</class>

        <class>ru.skoltech.cedl.dataexchange.users.model.UserRoleManagement</class>
        <class>ru.skoltech.cedl.dataexchange.users.model.UserManagement</class>
        <class>ru.skoltech.cedl.dataexchange.users.model.User</class>
        <class>ru.skoltech.cedl.dataexchange.users.model.Discipline</class>
        <class>ru.skoltech.cedl.dataexchange.users.model.UserDiscipline</class>
        <class>ru.skoltech.cedl.dataexchange.users.model.DisciplineSubSystem</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:demodb"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.transaction.flush_before_completion" value="true"/>
            <property name="hibernate.ejb.interceptor"
                      value="ru.skoltech.cedl.dataexchange.repository.ModificationInterceptor"/>
        </properties>
    </persistence-unit>
</persistence>